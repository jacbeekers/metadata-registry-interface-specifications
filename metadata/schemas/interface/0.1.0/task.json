{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://somewhere.abnamro.com/metadata/schemas/interface/0.1.0/task.json",
  "title": "Task, part of the DAG",
  "description": "The task in the DAG schema configuration (isc-orchestrator/orchestrator). Simplified for lineage purposes.",
  "type": "object",
  "properties": {
    "task": {
      "anyOf": [
        {
          "properties": {
            "name": {
              "type": "string"
            },
            "type": {
              "type": "string"
            }
          },
          "required": [
            "name",
            "type"
          ]
        },
        {
          "properties": {
            "$task": {
              "type": "string"
            }
          },
          "required": [
            "$task"
          ]
        },
        {
          "properties": {
            "$path": {
              "type": "string"
            }
          },
          "required": [
            "$path"
          ]
        }
      ]
    }
  }
}