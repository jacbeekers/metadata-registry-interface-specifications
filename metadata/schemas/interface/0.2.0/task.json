{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://somewhere.jacbeekers.nl/metadata/schemas/interface/0.2.0/task.json",
  "title": "Task, part of the DAG",
  "description": "The task in the DAG schema configuration (isc-orchestrator/orchestrator). Simplified for lineage purposes.",
  "type": "object",
  "properties": {
    "meta": {
      "type": "string",
      "description": "metadata type",
      "enum": [
        "task"
      ]
    },
    "task": {
      "anyOf": [
        {
          "properties": {
            "name": {
              "type": "string"
            },
            "type": {
              "type": "string"
            }
          },
          "required": [
            "name",
            "type"
          ]
        },
        {
          "properties": {
            "$task": {
              "type": "string"
            }
          },
          "required": [
            "$task"
          ]
        },
        {
          "properties": {
            "$path": {
              "type": "string"
            }
          },
          "required": [
            "$path"
          ]
        }
      ]
    }
  }
}